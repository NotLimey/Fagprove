{
    "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "tab",
        "indentWidth": 4,
        "lineWidth": 120,
        "lineEnding": "lf",
        "ignore": [
            "./.next",
            ".next"
        ]
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "always",
            "jsxQuoteStyle": "single",
            "semicolons": "always",
            "quoteStyle": "single",
            "trailingComma": "all",
            "quoteProperties": "asNeeded",
            "bracketSpacing": true,
            "bracketSameLine": false,
            "indentWidth": 4,
            "indentStyle": "tab"
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "nursery": {
                "noUnusedImports": "warn"
            }
        },
        "ignore": [
            "./.next",
            ".next"
        ]
    }
}